generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique
}

model Comments {
  id          Int      @id @default(autoincrement())
  name        String
  comment     String
  lastUpdated DateTime @default(now())
}

enum Role {
  CODE
  TEXT
}

model Post {
  id             Int     @id @default(autoincrement())
  title          String
  slug           String  @unique
  keywords       String
  // data
  bannerImageUrl String
  // comment
  // categories
  published      Boolean @default(true)
  deleted        Boolean @default(false)
}
